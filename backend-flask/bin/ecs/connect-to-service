#! /usr/bin/bash

if [ -z "$1" ]; then
  echo "No TABLE_NAME argument supplied eg ./bin/ecs/connect-to-service 8fee85a246f04a20aff49939d34e2846 backend-flask"
  exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
  echo "No CONTAINER_NAME argument supplied eg ./bin/ecs/connect-to-service 8fee85a246f04a20aff49939d34e2846 backend-flask"
  exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive